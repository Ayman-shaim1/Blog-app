{
  "hosting": {
    "firebase": "Blog-App",
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "predeploy": [
      "cd backend  && node server.js"
    ],
    "source": "functions"
  }
}